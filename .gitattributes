# Auto detect text files and perform LF normalization
* text=auto

# Mark Dart files as Dart language
*.dart linguist-language=Dart

# Mark generated files so GitHub doesn't count them in language stats
*.g.dart linguist-generated=true
*.freezed.dart linguist-generated=true
/lib/generated_plugin_registrant.dart linguist-generated=true

# Mark generated platform-specific files
/android/gradle-wrapper.jar linguist-generated=true
/android/gradlew linguist-generated=true
/android/gradlew.bat linguist-generated=true
/ios/Flutter/flutter_export_environment.sh linguist-generated=true
/ios/Flutter/Generated.xcconfig linguist-generated=true
/ios/Runner/GeneratedPluginRegistrant.* linguist-generated=true
/macos/Flutter/GeneratedPluginRegistrant.* linguist-generated=true
/windows/flutter/generated_plugin_registrant.* linguist-generated=true
/linux/flutter/generated_plugin_registrant.* linguist-generated=true

# Don't count third party code
/ios/Pods/ linguist-vendored
/android/.gradle/ linguist-vendored