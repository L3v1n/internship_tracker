# Auto detect text files and perform normalization
* text=auto

# Explicitly declare text files to ensure consistent line endings
*.dart text
*.yaml text
*.yml text
*.json text
*.html text
*.md text
*.txt text
*.gradle text
*.properties text
*.xml text

# Binary files
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.webp binary
*.ttf binary
*.otf binary
*.woff binary
*.woff2 binary

# Flutter/Dart specific
*.dart linguist-language=Dart
pubspec.yaml linguist-language=YAML
*.lock linguist-generated=true
**/.dart_tool/** linguist-generated=true
**/build/** linguist-generated=true
**/ios/Flutter/App.framework/** linguist-generated=true
**/ios/Flutter/Flutter.framework/** linguist-generated=true

# Android
*.kt linguist-language=Kotlin
*.java linguist-language=Java
**/android/gradlew linguist-vendored
**/android/gradlew.bat linguist-vendored
**/android/gradle/wrapper/** linguist-vendored

# iOS
*.swift linguist-language=Swift
*.h linguist-language=Objective-C
*.m linguist-language=Objective-C

# Generated plugin registrant files
**/generated_plugin_registrant.dart linguist-generated=true
